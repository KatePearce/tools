<body>

    {% macro copyright() %} Â© [[now.year]] <a href="https://codefordemocracy.org" class="text-gray" target="_blank"><u>Code for Democracy</u></a>. A 501(c)(3) nonprofit. EIN 83-3407325. Your use of this site is subject to our <a href="https://codefordemocracy.org/legal/#privacy" class="text-gray" target="_blank"><u>Privacy Policy</u></a> and <a href="https://codefordemocracy.org/legal/#terms" class="text-gray" target="_blank"><u>Terms of Service</u></a>. {% endmacro %}

    {% block html %}{% endblock %}

    <!-- modals -->
    <div id="waitlist" v-cloak>
      <modal :show="store.state.waitlist.modal" @cancel="store.commit('waitlist/modal', false)">
        <div slot="header">
          <h5 class="modal-title">This feature isn't quite ready yet!</h5>
          <p>Enter your email to get notified when it launches.</p>
        </div>
        <div slot="body">
          <form class="form-inline" @submit.prevent="subscribe()">
            <input type="text" v-model="form.b_b4403b081b3c5fd183e8f1f60_0a70f9292d" tabindex="-1" style="position: absolute; left: -5000px;" aria-hidden="true" />
            <div class="input-group w-100">
              <input class="form-control form-control-xs" placeholder="you@example.com" v-model="form.EMAIL" type="email" v-on:keyup="error=false; success=false" />
              <div class="input-group-append">
                <input type="submit" class="btn btn-xs btn-primary" value="Join Waitlist" :disabled="_.isEmpty(form.EMAIL)" />
              </div>
            </div>
          </form>
          <p class="text-danger small mt-1" v-if="error">An error has occurred.</p>
          <p class="text-primary small mt-1" v-if="success">You're all set!</p>
        </div>
        <div slot="footer">
          <button class="btn btn-xs btn-secondary" @click="store.commit('waitlist/modal', false)">Close</button>
        </div>
      </modal>
    </div>
    <div id="login" v-cloak>
      <modal :show="store.state.auth.login" @cancel="close()" :iframe="true">
        <iframe slot="body" :src="store.state.auth.login ? ACCOUNTURL + '/?embed=true' : ''" width="100%" :height="window.innerHeight * 0.7" frameborder="0"></iframe>
      </modal>
    </div>
    <div id="logout" v-cloak>
      <modal :show="store.state.auth.logout" @cancel="close()" :iframe="true">
        <iframe slot="body" :src="store.state.auth.logout ? ACCOUNTURL + '/logout/?embed=true' : ''" width="100%" :height="window.innerHeight * 0.7" frameborder="0"></iframe>
      </modal>
    </div>
    <!-- / modals -->

    <script src="//cdn.jsdelivr.net/npm/vue@2.6.12"></script>
    <script src="//cdn.jsdelivr.net/npm/vuex@3.6.0"></script>
    <script src="//unpkg.com/vue-router@3.5.1"></script>
