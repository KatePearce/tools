<div class="bg-white border border-secondary p-5 form-full form-sm form-nosubmit">
  <div class="form-group">
    <label class="label">Name:</label>
    <p class="form-text-top">Enter a name for the visualization.</p>
    <input class="form-element" type="text" v-model="save.name" placeholder="Short Title"></input>
  </div>
  <div class="form-group">
    <label class="label">Description:</label>
    <p class="form-text-top">Enter a description for the visualization.</p>
    <textarea class="form-element" v-model="save.description" placeholder="Details about the data or what it describes" rows="3"></textarea>
  </div>
</div>
