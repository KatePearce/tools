<h5 class="text-2xl text-dark-gray mb-2">Review Entities</h5>
<p class="font-light text-sm leading-relaxed">Confirm that these are the entities you wish to add to your list.</p>
<template v-if="_.includes(store.state.workflow.valid, store.state.workflow.tab-1)">
  <p class="text-xs mb-5">You can also download the entities in the list for use in other applications.</p>
  <button class="btn btn-sm btn-gray mb-2" @click="store.getters['auth/isVerified'] ? review.download = 'csv' : store.commit('auth/verify', true)" :disabled="review.download == 'csv'">
    <span v-if="review.download == 'csv'">Rows Processed: {{review.downloading | numbreviate}}<span v-if="review.count > 0"> of {{review.count | numbreviate}}</span></span>
    <span v-else>Download Entities as CSV</span>
  </button>
  <button class="btn btn-sm btn-gray" @click="store.getters['auth/isVerified'] ? review.download = 'json' : store.commit('auth/verify', true)" :disabled="review.download == 'json'">
    <span v-if="review.download == 'json'">Rows Processed: {{review.downloading | numbreviate}}<span v-if="review.count > 0"> of {{review.count | numbreviate}}</span></span>
    <span v-else>Download Entities as JSON</span>
  </button>
</template>
